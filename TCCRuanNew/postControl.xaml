<UserControl x:Class="TCCRuan.postControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="600" d:DesignWidth="400">

    <Grid x:Name="dafoultNewPost" Height="600" Width="400" Background="{StaticResource PhoneChromeBrush}">
        <Grid x:Name="imagePost" Grid.Row="0" Margin="10,0,-10,0" Background="AliceBlue">
            <Image x:Name="imgPost" Width="380" Height="480" Margin="10,0,10,100" />
        </Grid>
        <Grid Grid.Row="1" Background="Azure">
            <Grid Grid.Column="0">
                <Ellipse x:Name="imgUserPost" Fill="#FFF4F4F5" Width="100" Stroke="Black" RenderTransformOrigin="-2.5,0.7" HorizontalAlignment="Left" Margin="10,0,0,10" Height="100" VerticalAlignment="Bottom"/>
            </Grid>
            <Grid Grid.Column="1">
                <TextBlock x:Name="description"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>